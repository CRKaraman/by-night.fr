{% extends "base.html.twig" %}

{% block layout %}
    <h1>{% block titre 'Hello' %}</h1>
    <div class="{% block container_class 'container' %}" id="container">
        {% include "layouts/_flash_messages.html.twig" %}
        {% if no_ads is not defined %}{% include 'ad.html.twig' %}{% endif %}
        <div class="card">
            <div class="card-body">
                <div class="px-md-5">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        {% if no_ads is not defined %}{% include 'ad2.html.twig' %}{% endif %}
    </div>
{% endblock %}
