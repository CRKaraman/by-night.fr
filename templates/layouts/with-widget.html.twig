{% extends "layouts/default.html.twig" %}

{% block head_js_layout %}
    <script type="text/javascript">
        var fbAppId = "{{ facebook_app_id }}";
    </script>
{% endblock %}

{% block layout %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <h1 class="titrebloc">{% block titre 'Hello' %}</h1>
                <div class="divider">
                    <span class="text-primary divider-icon"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid" id="container-fluid">
        <div id="content" class="col-md-8 panel-right">
            <div class="col-lg-11 col-lg-offset-1">
                {% block body %}{% endblock %}
            </div>
        </div>
        <div class="col-md-4 col-md-offset-0 col-sm-offset-0 col-sm-12 col-xs-12 col-xs-offset-0" id="widgets">
            <div class="col-lg-11 col-lg-offset-1">
                <div id="fb-root"></div>
                {% block widgets %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}