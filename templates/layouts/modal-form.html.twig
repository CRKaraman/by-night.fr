{%- block modal -%}
    <form action="{% block form_action %}#{% endblock %}" method="POST">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="m2odal-title" id="dialog_titre">{% block titre %}By Night{% endblock %}</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {% block body %}{% endblock %}
                </div>
                <div class="modal-footer">
                    {% block footer %}{% endblock %}
                    <button type="button" class="btn btn-secondary btn_retour" data-dismiss="modal">Fermer</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </form>
{%- endblock -%}
