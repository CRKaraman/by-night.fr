{% extends "Admin/layout.html.twig" %}

{% block titre_admin 'Réseaux Sociaux' %}
{% block title_admin 'Paramétrage des Réseaux Sociaux' %}

{% block breadcrumb_admin -%}
    {% set item = menu.addItem('Réseaux Sociaux', path('app_administration_info_edit', {'id': info.id})) %}
{%- endblock %}

{% block body -%}
