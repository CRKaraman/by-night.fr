    {% endfor %}
{%- endblock %}

{% block css -%}
    <link rel="stylesheet" href="{{ app_asset('admin/info/css/style.min.css') }}" type="text/css">
{%- endblock %}

{% block js -%}
    <script src="{{ app_asset('admin/info/js/login.min.js') }}" type="text/javascript"></script>
{%- endblock %}
