<html prefix="og: http://ogp.me/ns#" lang="fr" xmlns:fb="http://ogp.me/ns/fb#">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta http-equiv="Content-Language" content="fr">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% spaceless %}{% block full_title %}{% spaceless %}{%- block title -%}{%- endblock -%}{% endspaceless %} - {% block nom_site 'By Night' %}{% endblock %}{% endspaceless %}</title>
    <meta name="title" content="{{ block('og_titre') }}">
    <meta name="keywords" content="{% block meta_full_keywords %}{% block meta_keywords %}{% endblock %}aujourd'hui,ce,soir,soiree,sortie,concert,spectacle,musique,discotheque,boite,de,nuit{% endblock %}">
    <meta name="description" content="{% block description %}{% block meta_description %}By Night vous fait découvrir tous les événements du moment !{% endblock %}{% endblock %}">

    <!-- Icons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=PYezm92qNy">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png?v=PYezm92qNy">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png?v=PYezm92qNy">
    <link rel="manifest" href="/site.webmanifest?v=PYezm92qNy">
    <link rel="mask-icon" href="/safari-pinned-tab.svg?v=PYezm92qNy" color="#3f51b5">
    <link rel="shortcut icon" href="/favicon.ico?v=PYezm92qNy">
    <meta name="msapplication-TileColor" content="#3f51b5">
    <meta name="theme-color" content="#3f51b5">
    <!-- ./Icons -->

    <!-- OpenGraph -->
    <meta property="og:site_name" content="{{ block('nom_site') }}">
    <meta property="og:description" content="{% block og_description %}{{ block('description') }}{% endblock %}">
    <meta property="og:title" content="{% block og_titre %}{{ block('title') }}{% endblock %}">
    <meta property="og:type" content="{% block og_type %}website{% endblock %}">
    <meta property="og:url" content="{% block og_url %}{{ url('app_main_index') }}{% endblock %}">
    <meta property="og:locale" content="fr" />
    <meta property="og:image" content="{% block og_image %}{{ absolute_url(app_asset('img/by-night.png')) }}{% endblock %}">
    <!-- ./OpenGraph -->

    <!-- Twitter -->
    {% if social_manager.twitterIdPage %}
        <meta name="twitter:card" content="summary" />
        <meta name="twitter:site" content="@{{ social_manager.twitterIdPage }}" />
        <meta name="twitter:title" content="{{ block('og_titre') }}" />
        <meta name="twitter:description" content="{{ block('og_description') }}" />
        <meta name="twitter:image:src" content="{{ block('og_image') }}" />
    {% endif %}
    {% block twitter %}{% endblock %}
    <!-- ./Twitter -->

    <!-- FB -->
    {% if social_manager.facebookIdPage %}
        <meta property="fb:page_id" content="{{ social_manager.facebookIdPage }}" />
    {% endif %}
    {% block facebook %}{% endblock %}
    <!-- ./FB -->

    <!-- Google -->
    {% block google %}{% endblock %}
    <!-- ./Google -->

    <!-- DC -->
    <meta name="dc.description" content="{{ block('og_description') }}">
    <meta name="dc.title" content="{{ block('og_titre') }}">
    <meta name="dc.keywords" content="{{ block('meta_full_keywords') }}" />
    <!-- ./DC -->

    {% block metas %}{% endblock %}

    <link rel="canonical" href="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}" />

    <!-- CSS -->
    <link href='//fonts.googleapis.com/css?family=Roboto:100,300,400%7CRoboto+Condensed:100,300,400' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="{{ app_asset('main/css/style.min.css') }}" type="text/css">
    {% block css_layout %}{% endblock %}
    {% block css %}{% endblock %}
    <link rel="stylesheet" href="{{ app_asset('css/print.min.css') }}" type="text/css" media="print">
    <!-- ./CSS -->

    <!--[if lt IE 9]>
    <script src="//oss.maxcdn.com/libs/html5shiv/3.7.2/html5shiv.js"></script>
    <script src="//oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    {% if no_ads is not defined %}
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <script> (adsbygoogle = window.adsbygoogle || []).push({ google_ad_client: "ca-pub-2072406985754187", enable_page_level_ads: true }); </script>
    {% endif %}
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-45716709-2"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'UA-45716709-2');
    </script>

    <script type="application/ld+json">
        {
            "@context": "http://schema.org",
            "@type": "WebSite",
            "url": "{{ url('app_main_index') }}",
            "potentialAction": {
                "@type": "SearchAction",
                "target": "{{ url('app_search_query', {'q': '{search_term_string}'})|url_decode }}",
                "query-input": "required name=search_term_string"
            }
        }

    </script>
    {% block head_js_layout %}{% endblock %}
    {% block head_js %}{% endblock %}
</head>
<body itemscope itemtype="http://schema.org/WebPage">
<div id="wrap">
    <header>
        <!-- Menu -->
        {% if location is defined and location.isCity %}
            {{ render_esi(path('app_private_header', {'id': location.city.id})) }}
        {% else %}
            {{ render_esi(path('app_private_header')) }}
        {% endif %}
        <!-- ./Menu -->

        {% block full_breadcrumb %}
        <div id="bread" class="bg-white">
            <div class="container">
                {% set item = menu.addItem('By Night', path('app_main_index')) %}

                {% block breadcrumb %}{% endblock %}
                {{ wo_render_breadcrumbs({separator: null, listId: 'fil-ariane'}) }}
            </div>
        </div>
        {% endblock %}
    </header>

    <!-- Main -->
    {% block layout %}{% endblock %}
    <!-- ./Main -->
</div>

<!-- Modals -->
<div class="modal fade" id="dialog_details" tabindex="-1" role="dialog" aria-labelledby="dialog_titre" aria-hidden="true">
    {% include "modals.html.twig" %}
</div>
<!-- ./Modals -->

<!-- Footer -->
{% if location is defined %}
    {% set countryId = location.isCountry ? location.country.id : location.city.country.id %}
    {{ render_esi(controller('App\\Controller\\Fragments\\CommonController::footer', {'id': countryId})) }}
{% else %}
    {{ render_esi(controller('App\\Controller\\Fragments\\CommonController::footer')) }}
{% endif %}
<!-- ./Footer -->

<a href="#" id="toTop" class="btn btn-primary btn-fab btn-raised">
    <span id="toTopHover">
        <i class="fa fa-chevron-up"></i>
    </span>
</a>

<!-- JS -->
<script type="text/javascript" src="{{ app_asset('main/js/scripts.min.js') }}"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $.cookieBar({
            message: 'En poursuivant votre navigation, vous acceptez l\'utilisation de cookies pour vous proposer des services et offres adaptés à vos centres d\'intérêts et mesurer la fréquentation de nos services.',
            acceptText: 'J\'ai compris',
            bottom: true,
            fixed: true,
            policyButton: true,
            policyText: 'En savoir plus',
            policyURL: '{{ path('app_main_cookie') }}'
        });
    });
</script>
{%- block js_layout -%}{%- endblock -%}
{%- block js -%}{%- endblock -%}
<!-- ./JS -->
</body>
</html>

