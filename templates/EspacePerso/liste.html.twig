{% extends "EspacePerso/layout.html.twig" %}

{% block titre 'Mes événements' %}
{% block title 'Mes événements' %}

{% block container_class '' %}

{% block body -%}
    <div class="text-center">
        <a class="btn btn-success btn-raised" href="{{ path('app_event_new') }}">
            <i class="fa fa-plus"></i>
            Nouvel événement
        </a>
        {% if canSynchro %}
            <a class="btn btn-info btn-raised" href="{{ path('app_event_import_events') }}">
                <i class="fa fa-refresh"></i>
                Synchroniser mes événements Facebook
            </a>
        {% else %}
            <a id="connect-fb" class="btn btn-info btn-raised" href="{{ hwi_oauth_login_url('facebook_list_events') }}" data-href="{{ path('app_event_import_events') }}">
                <i class="fa fa-facebook"></i>
                Me connecter à Facebook pour synchroniser mes événements
            </a>
        {% endif %}
    </div>
    <br />
    <br />

    {% import "Form/macros.html.twig" as macros %}
    {% if events|length > 0 %}
        <table class="table table-striped bg-white component">
            <thead>
            <tr>
                <th>Actions</th>
                <th>Nom</th>
                <th>Lieu</th>
                <th>Ville</th>
                <th>Date</th>
                <th>Visible</th>
                <th>Annulé</th>
            </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>
                        <a class="btn btn-primary" href="{{ path('app_event_edit', {'slug': event.slug}) }}"
                           title="Corriger l'événement">
                            <i class="fa fa-pencil"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('app_event_details', {'slug': event.slug, 'id': event.id, 'location': event.locationSlug}) }}"
                           title="Accéder à l'événement">{{ event.nom }}</a></td>
                    <td>{{ event.placeName }}</td>
                    <td>{{ event.placeCity }}</td>
                    <td>
                        {{ macros.dates(event.dateDebut, event.dateFin) }}
                    </td>
                    <td>
                        <div class="togglebutton">
                            <label>
                                <input type="checkbox"
                                       class="brouillon"
                                       data-href="{{ path('app_event_brouillon', {'slug': event.slug}) }}" {{ not event.isBrouillon ? 'checked' : '' }} />
                            </label>
                        </div>
                    </td>
                    <td>
                        <div class="togglebutton">
                            <label>
                                <input type="checkbox"
                                       class="annuler"
                                       data-href="{{ path('app_event_annuler', {'slug': event.slug}) }}" {{ event.modificationDerniereMinute ? 'checked' : '' }} />
                            </label>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-info">
            <i class="fa fa-info-circle"></i> Aucun événement créé, publiez dès maintenant le vôtre !
        </div>
    {% endif %}
{%- endblock %}

{% block js -%}
    <script src="{{ app_asset('espace-perso/evenements/js/liste.min.js') }}" type="text/javascript"></script>
{%- endblock %}
