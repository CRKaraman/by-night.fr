<div class="commentaires">
    {% for comment in comments %}
        <div class="row comment">
            <div class="col-xs-3 col-sm-2">
                {% set imageURL = userProfilePicture.profilePicture(comment.user) %}
                <img class="img-rounded img-responsive" src="{{ imageURL }}" alt="{{ comment.user.username }}" />
            </div>
            <div class="col-xs-9 col-sm-10">
                <div class="infos">
                    <a href="{{ path('app_user_details', {'id': comment.user.id, 'slug': comment.user.slug}) }}">{{ comment.user.username }}</a>
                    <span title="{{ comment.dateCreation|localizeddate('medium','medium')|capitalize }}">
                            <i class="fa fa-clock-o"></i> {{ comment.dateCreation|diff_date }}
                        </span>
                </div>
                <p>
                    {{ comment.commentaire|striptags('<i><b>')|nl2br|parse_tags|raw }}
                </p>
                {% block comment_reponses %}
                    <div class="reponses">
                        <div class="infos">
                            <span class="label label-primary nb_reponses">{{ comment.reponses.count }}</span>
                            <button type="button" class="btn btn-default btn-xs btn-list btn-raised" data-url="{{ path('app_comment_reponse_list', {'id' : comment.id }) }}">
                                <i class="fa fa-angle-up icon_list"></i>
                            </button>
                            |
                            <a href="#" class="repondre" data-url="{{ path('app_comment_reponse_new', {'id' : comment.id }) }}">RÃ©pondre</a>
                        </div>
                        <div class="block_poster_reponse"></div>
                        <div class="block_reponses"></div>
                    </div>
                {% endblock %}
            </div>
        </div>
    {% endfor %}

    {% if nb_comments > ((page)*offset) %}
        {% block load_more %}
            <div class="load_more" data-url="{{ path('app_comment_list',{'id': soiree.id ,'page': (page+1) }) }}">
                <button type="button" class="btn btn-primary btn-raised btn-lg btn-block btn-raised">
                    Plus
                </button>
            </div>
        {% endblock %}
    {% endif %}
</div>
