{{ fos_httpcache_tag('widget-event') }}
{% for event in events %}
    {{ fos_httpcache_tag(tags('event', event)) }}
    {{ fos_httpcache_tag(tags('place', event.place)) }}
    <div class="widget_item">
        <div class="row">
            <div class="col-xs-3 col-md-2 min_membre preserve text-center color-second"
                 title="{{ event.dateFin|localizeddate('full','none') }}">
                <span class="number thin">{{ event.dateFin|date('d') }}</span>
                <span class="month thin">{{ (event.dateFin|localizeddate('long','none')|split(' ')[1])[:3]|capitalize }}</span>
            </div>
            <div class="col-xs-9 col-md-10 preserve">
                <h4 class="modal-title">
                    <a title="Tous les détails de {{ event.nom }}"
                       href="{{ path('app_event_details', {'slug' : event.slug, 'id': event.id, 'location': event.locationSlug}) }}">{{ event.nom }}</a>
                </h4>
                <strong class="text-primary"
                        style="font-weight: normal"
                        title="{{ event.placeCity }}">{{ event.placeName }}</strong>
                {% set distinctTags = event.distinctTags %}
                {% if distinctTags|length %}
                    <br/>
                    {% for tag in distinctTags %}
                        {% if event.place.city %}
                            <a class="label label-info"
                               title="{{ tag }} à {{ event.place.city.name }}"
                               href="{{ path('app_agenda_tags', {'tag' : tag|trim, 'location': event.place.locationSlug}) }}">
                                <strong>{{ tag }}</strong>
                            </a>
                        {% else %}
                            <a class="label label-info"
                               title="{{ tag }} en {{ event.place.country.name }}"
                               href="{{ path('app_agenda_tags', {'tag' : tag|trim, 'location': event.place.locationSlug}) }}">
                                <strong>{{ tag }}</strong>
                            </a>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
{% endfor %}
{% if hasNextLink %}
    <a class="more-content btn btn-primary btn-raised btn-block" href="{{ hasNextLink }}">Plus ({{ current }}
        / {{ count }})</a>
{% endif %}

