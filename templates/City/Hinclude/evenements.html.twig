{% for soiree in soirees %}
    <div class="widget_item">
        <div class="row">
            <div class="col-xs-3 col-md-2 min_membre preserve text-center color-second"
                 title="{{ soiree.dateFin|localizeddate('full','none') }}">
                <span class="number thin">{{ soiree.dateFin|date('d') }}</span>
                <span class="month thin">{{ (soiree.dateFin|localizeddate('long','none')|split(' ')[1])[:3]|capitalize }}</span>
            </div>
            <div class="col-xs-9 col-md-10 preserve">
                <h4 class="modal-title">
                    <a title="Tous les détails de {{ soiree.nom }}"
                       href="{{ path('app_agenda_details', {'slug' : soiree.slug, 'id': soiree.id, 'location': soiree.locationSlug}) }}">{{ soiree.nom }}</a>
                </h4>
                <strong class="text-primary"
                        style="font-weight: normal"
                        title="{{ soiree.placeCity }}">{{ soiree.placeName }}</strong>
                {% set distinctTags = soiree.distinctTags %}
                {% if distinctTags|length %}
                    <br/>
                    {% for tag in distinctTags %}
                        {% if soiree.place and soiree.place.city %}
                            <a class="label label-info"
                               title="{{ tag }} à {{ soiree.place.city.name }}"
                               href="{{ path('app_agenda_tags', {'tag' : tag|trim, 'location': soiree.place.locationSlug}) }}">
                                <strong>{{ tag }}</strong>
                            </a>
                        {% endif %}
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
{% endfor %}
{% if hasNextLink %}
    <a class="more-content btn btn-primary btn-raised btn-block" href="{{ hasNextLink }}">Plus ({{ current }}
        / {{ count }})</a>
{% endif %}

