                </div>
                <div class="col-xs-6 col-md-3 sites">
                    <h3 class="modal-title color-second">Recherche par ville</h3>
                    <ul class="fa-ul">
                        {% for city in cities %}
                            <li>
                                <i class="fa fa-li fa-angle-right"></i>
                                <a title="Sortir à {{ city.name }}, {{ city.country }}" href="{{ path('app_agenda_index', {'location' : city.slug}) }}">
                                    {{ city.name }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-xs-6 col-md-3">
                    <h3 class="modal-title color-second">Partenaires</h3>
