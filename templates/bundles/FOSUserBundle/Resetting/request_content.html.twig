{% trans_default_domain 'FOSUserBundle' %}

<p class="lead">Vous avez perdu votre mot de passe ? Retrouvez-le ici</p>
<form action="{{ path('fos_user_resetting_send_email') }}" method="POST">
    <div class="form-group">
        <label for="username">{{ 'resetting.request.username'|trans }}</label>
        <input class="form-control" type="text" id="username" name="username" required="required"/>
    </div>
    <div>
        <button class="btn btn-raised btn-primary" type="submit">{{ 'resetting.request.submit'|trans }}</button>
    </div>
</form>
