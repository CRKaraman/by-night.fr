{% trans_default_domain 'FOSUserBundle' %}

{% set user = app.user %}
<div class="card">
    <ul class="nav nav-tabs nav-fill">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#profil" aria-controls="profil">
                <i class="fa fa-user"></i>
                Profil
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#socials" aria-controls="socials">
                <i class="fa fa-facebook"></i>
                Réseaux sociaux
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#password" aria-controls="password">
                <i class="fa fa-key"></i>
                Mot de passe
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#supprimer" aria-controls="supprimer">
                <i class="fa fa-trash"></i>
                Supprimer le compte
            </a>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="profil" role="tabpanel">
            <h2 class="card-header">Profil</h2>
            <div class="card-body">
                {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'enctype': 'multipart/form-data'} }) }}
                {% if not user.path %}
                    {% set imageURL = userProfilePicture.getProfilePicture(user) %}
                    <img class="img img-fluid" src="{{ imageURL }}" />
                {% endif %}
                {{ form_row(form.imageFile) }}

                <div class="form-row">
                    <div class="col-md-6">
                        {{ form_row(form.username) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.email) }}
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-md-6">
                        {{ form_row(form.firstname) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.lastname) }}
                    </div>
                </div>
                {{ form_row(form.description) }}

                <div class="form-row align-items-baseline">
                    <div class="col-md-6">
                        {{ form_row(form.website) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.showSocials) }}
                    </div>
                </div>
                <input type="submit" class="btn btn-primary btn-raised btn-block mb-0 mt-3" value="Modifier mes informations" />

                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
        <div class="tab-pane fade" id="socials" role="tabpanel" aria-labelledby="home-tab">
            <h2 class="card-header">Réseaux sociaux</h2>
            <div class="card-body">
                {% for service in ['facebook', 'google', 'twitter'] %}
                    <div class="bloc_config">
                        {% include "Social/social.html.twig" with { 'info': app.user.info, 'service': service } %}
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="tab-pane fade" id="password" role="tabpanel">
            <h2 class="card-header">Mot de passe</h2>
            <div class="card-body">
                {{ form_start(formChangePassword, { 'action': path('fos_user_change_password') }) }}

                {{ form_row(formChangePassword.current_password) }}
                {{ form_row(formChangePassword.plainPassword.first) }}
                {{ form_row(formChangePassword.plainPassword.second) }}
                <input type="submit" class="btn btn-primary btn-raised btn-block mb-0 mt-3" value="{{ 'change_password.submit'|trans }}" />

                {{ form_rest(formChangePassword) }}
                {{ form_end(formChangePassword) }}
            </div>
        </div>
        <div class="tab-pane fade" id="supprimer" role="tabpanel">
            <h2 class="card-header">Supprimer le compte</h2>
            <div class="card-body">
                <p>Supprimer les informations relatives à mon compte</p>
                <button id="btnDelete" type="button" data-toggle="modal" data-target="#deleteModal" class="btn btn-danger btn-raised btn-block mb-0 mt-3">
                    Supprimer mon compte
                </button>
            </div>
        </div>
    </div>
</div>
{% include "bundles/FOSUserBundle/Profile/_modal_delete.html.twig" %}
