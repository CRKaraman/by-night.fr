{# empty Twig template #}
{% extends "TBNUserBundle:Membres:layout.html.twig" %}

{% block title_membre %}
    Les membres à {{ site.nom }}
{% endblock %}

{% block titre_membre %}
    Membres
{% endblock %}

{% block meta_keywords_membre %}
    derniers, membres, 
{% endblock %}

{% block meta_description_espace %}
    Tous les membres de {{ site.nom }} By Night !
{% endblock %}


{% block body_membre %}
    {% include "TBNUserBundle:Membres:block_search.html.twig" with({ 'term' : null }) %}
    
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Dernières connexions</h4>
                </div>
                <div class="panel-body">
                    {% for i, user in last_actifs %}
                        {% include "TBNUserBundle:Membres:block_details_user.html.twig" %}
                        {% if (i+1) < last_actifs|length %}
                            <hr />
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Nouveaux membres</h4>
                </div>
                <div class="panel-body">
                    {% for i, user in new_membres %}
                        {% include "TBNUserBundle:Membres:block_details_user.html.twig" %}
                        {% if (i+1) < new_membres|length %}
                            <hr />
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block css_membre %}
    
    {% stylesheets 
        'bundles/tbnuser/css/liste.css'

        filter='cssrewrite,?yui_css'
        output='prod/css/users/liste.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen" >
    {% endstylesheets %}
{% endblock %}

{% block js_membre %}    
    {% javascripts 
        '@TBNUserBundle/Resources/public/js/list_user.js'

        filter='?yui_js'
        output='prod/js/user/liste.js'
    %}
        js_scripts.final.push("{{ asset_url }}");
    {% endjavascripts %}
{% endblock %}