{% extends "TBNUserBundle::layout.html.twig" %}

{% block start_container -%}
<div class="container" id="container">
{%- endblock %}

{% block titre_espace %}
    Mon compte
{% endblock %}
    
{% block breadcrumb_espace %}
    {% set item = menu.addItem("Mon compte", path('fos_user_profile_show')) %}
{% endblock %}

{% block body_espace %}
    {% include "FOSUserBundle:Profile:show_content.html.twig" %}
{% endblock body_espace %}

{% block css_espace %}
    {% stylesheets 
        'bundles/tbnsocial/css/social_login.css'

        output='prod/css/espace-perso/login.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen" >
    {% endstylesheets %}       
{% endblock %}

{% block js_espace %}
    {% javascripts 
        '@TBNSocialBundle/Resources/public/js/SocialLogin.js'
        output='prod/js/espace-perso/login.js'
    %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}
