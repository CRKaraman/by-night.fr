<div class="fb_membres">
{% for fbUser in membres|slice(0, 30) -%}
    {% set picture = fbUser.getProperty('picture') %}
    {% if picture is not null %}
        <a href="https://www.facebook.com/{{ fbUser.getProperty('id') }}" 
           rel="external"
           itemprop="attendee" 
           itemscope
           itemtype="http://schema.org/Person"
           title="{{ fbUser.getProperty('name') }}"
        >     
            <img itemprop="image" 
                 width="50"
                 height="50"
                 src="{{ fbUser.getProperty('picture').getProperty('url') }}"
                 alt="{{ fbUser.getProperty('name') }}" />
        </a>
    {% endif %}
{%- endfor %}
</div>

