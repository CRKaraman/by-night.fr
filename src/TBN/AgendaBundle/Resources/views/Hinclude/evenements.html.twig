{% for soiree in soirees %}
    {% set nomSoiree = soiree.nom %}
    <div class="widget_item">
        <div class="row">
            <div class="col-xs-3 min_membre preserve text-center color-second" title="{{ soiree.dateDebut|localizeddate('full','none') }}">
                <span class="number thin">{{ soiree.dateDebut|date('d') }}</span>
                <span class="month thin">{{ (soiree.dateDebut|localizeddate('long','none')|split(' ')[1])[:3]|capitalize }}</span>
            </div>
            <div class="col-xs-9 preserve">
                <h4 class="modal-title">
                    <a title="Tous les dÃ©tails de {{ nomSoiree }}" href="{{ path('tbn_agenda_details', {'slug' : soiree.slug}) }}">{{ nomSoiree }}</a>
                </h4>            
                <span class="text-primary" title="{{ soiree.place.ville ? soiree.place.ville.nom : '' }}">{{ soiree.place.nom }}</span>
            </div>
        </div>
    </div>
{% endfor %}
{% if soirees|length == maxItems|default(0) %}
    <div class="more-content"></div>
{% endif %}