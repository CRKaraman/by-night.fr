{% extends "TBNAgendaBundle:Widget:template.html.twig" %}

{% block titre %}Retrouvez-nous sur Facebook{% endblock %}
{% block icone %}fa-facebook{% endblock %}
{% block body %}
    <div id="fb-root"></div>
        <div id="fb-container">
            <div class="fb-like-box" 
                 data-href="https://www.facebook.com/{{ site.facebookIdPage}}" 
                 data-colorscheme="light" 
                 data-show-faces="true" 
                 data-header="false" 
                 data-stream="false"
                 data-width="250"
                 data-height="300"
                 data-show-border="false">
            </div>
        </div>
{% endblock %}