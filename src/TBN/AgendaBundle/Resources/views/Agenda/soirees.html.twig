{% extends "TBNAgendaBundle:Agenda:accueil.html.twig"|partial_extends() %}

{% block soirees %}{% spaceless %}
{% if soirees|length > 0 %}
    {% for i,soiree in soirees %}
        {% include "TBNAgendaBundle:Agenda:block_preview_soiree.html.twig" %}
        <hr />
    {% endfor %}

    {% if soirees|length == maxPerEvent %}
    <div>
        <a id="paginate"
           class="btn btn-primary btn-lg btn-flat btn-block"
           href="{{ path('tbn_agenda_pagination', {'page': (page + 1)}) }}" 
           data-next="{{ (page + 1) }}">
            <i class="fa fa-chevron-down"></i> Page {{ page + 1 }}
        </a>
    </div>
    {% endif %}
{% endif %}
{% endspaceless %}{% endblock %}

{% block title_agenda %}
    {% if page > 1 %}Page {{page}} - {% endif %}
    Agenda des événements
{% endblock %}
