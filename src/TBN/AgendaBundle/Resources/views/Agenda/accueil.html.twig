{% extends "TBNAgendaBundle::layout-fluid.html.twig" %}

{% block breadcrumb_agenda %}    
    {% if page > 1 %}
        {% set test = menu.addItem("Page " ~ page, path('tbn_agenda_pagination', {'page': page})) %}
    {% endif %}
{% endblock %}


{% block titre_agenda %}
    Agenda des <strong>événements {{ site.adjectifPluriel }}</strong>
{% endblock %}

{% block helper -%}
    {% include "TBNAgendaBundle:Agenda:block_criteres.html.twig" %}    
{%- endblock %}

{% block body_agenda -%}
    <div id="pjax-search-container">
        {% block soirees -%}{%- endblock %}                
    </div>  
{%- endblock %}

{% block widgets_agenda %}{% include "TBNAgendaBundle:MenuDroit:accueil.html.twig" %}{% endblock %}

{% block css_agenda %}
    {% stylesheets 
        'bower/bootstrap-datepicker/css/datepicker3.css'
        'bower/bootstrap-select/dist/css/bootstrap-select.min.css'
        'bower/fancybox/source/jquery.fancybox.css'
        'bundles/tbnagenda/css/liste.css'

        filter='cssrewrite,?yui_css'
        output='prod/css/evenements/style.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen" >
    {% endstylesheets %}
{% endblock %}

{% block head_js_agenda %}
    <meta name="include_mode" content="async" >
    <script src="//cdnjs.cloudflare.com/ajax/libs/hinclude/0.9.5/hinclude.min.js" type="text/javascript"></script>
{% endblock %}

{% block js_agenda %}
    require(["agenda/agenda"]);
    require(["agenda/socials"], function(SocialSDK)
    {
        SocialSDK.facebook().twitter();
    });
{% endblock %}