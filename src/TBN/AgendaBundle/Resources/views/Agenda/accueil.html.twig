{% extends "TBNAgendaBundle::layout-fluid.html.twig" %}

{% block breadcrumb_agenda %}    
    {% if page > 1 %}
        {% set test = menu.addItem("Page " ~ page, path('tbn_agenda_pagination', {'page': page})) %}
    {% endif %}
{% endblock %}


{% block titre_agenda %}
    Agenda des <strong>événements {{ site.adjectifPluriel }}</strong>
{% endblock %}
    
{% block body_agenda -%}
    {% include "TBNAgendaBundle:Agenda:block_criteres.html.twig" %}    

    <div id="pjax-search-container">
        {% block soirees -%}{%- endblock %}                
    </div>  
{%- endblock %}

{% block widgets_agenda %}{% include "TBNAgendaBundle:MenuDroit:accueil.html.twig" %}{% endblock %}

{% block css_agenda %}
    
    <link rel="stylesheet" href="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/themes/redmond/jquery-ui.min.css" type="text/css" media="screen" >
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.6.3/css/bootstrap-select.min.css" type="text/css" media="screen" >
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.min.css" type="text/css" media="screen" >
    
    {% stylesheets 
        'bundles/tbnagenda/css/liste.css'

        filter='cssrewrite,?yui_css'
        output='prod/css/evenements/style.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen" >
    {% endstylesheets %}
{% endblock %}

{% block head_js_agenda %}
    <script src="//cdnjs.cloudflare.com/ajax/libs/hinclude/0.9.5/hinclude.min.js" type="text/javascript"></script>
{% endblock %}

{% block js_agenda %}    
    js_scripts.plugin.push("//cdnjs.cloudflare.com/ajax/libs/jquery.pjax/1.9.2/jquery.pjax.min.js");
    js_scripts.plugin.push("//cdnjs.cloudflare.com/ajax/libs/unveil/1.3.0/jquery.unveil.min.js");
    js_scripts.plugin.push("//cdnjs.cloudflare.com/ajax/libs/fancybox/2.1.5/jquery.fancybox.pack.js");
    js_scripts.plugin.push("//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.6.3/js/bootstrap-select.min.js");
    
    {% javascripts 
        '@TBNAgendaBundle/Resources/public/js/jquery-ui.min.js'
        '@TBNAgendaBundle/Resources/public/js/require_plugins.js'
        '@TBNAgendaBundle/Resources/public/js/socials.js'

        filter='?yui_js'
        output='prod/js/evenements/plugins.js'
    %}            
        js_scripts.plugin.push("{{ asset_url }}");
    {% endjavascripts %}
    
    js_scripts.final.push("//cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.6.3/js/i18n/defaults-fr_FR.js");
    {% javascripts 
        '@TBNAgendaBundle/Resources/public/js/datepicker-fr.js'
        '@TBNAgendaBundle/Resources/public/js/agenda.js'

        filter='?yui_js'
        output='prod/js/evenements/scripts.js'
    %}
        js_scripts.final.push("{{ asset_url }}");
    {% endjavascripts %}
{% endblock %}