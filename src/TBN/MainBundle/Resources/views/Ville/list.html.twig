{% extends "TBNMainBundle::layout.html.twig" %}

{% block start_container -%}<div>{% endblock %}

{% block titre_main %}Bienvenue sur By Night !{% endblock %}

{% block title_main %}Choisissez votre ville{% endblock %}

{% block meta_description_main %}
Choisissez votre ville parmis {{ villes|join(", ") }} pour découvrir les événements du moment !
{% endblock %}

    
{% block meta_keywords_main %}
    {% for site in sites %}
        {{ site.nom }},
    {% endfor %}
{% endblock %}

{% block body_main %}
<section class="bg-white">
    <div class="container">
        <h2 class="text-primary">Envie de sortir ?</h2>
        <br />
        <p class="lead">
            By Night vous propose les <strong>agendas des événements</strong>, concerts, spectacles et manifestations dans les plus grandes villes de France.
        </p>
        <p class="lead">
            Qu'attendez vous ? Choisissez votre ville et découvrez tous les événements !
        </p>
    </div>
    <br />
</section>
<br />
<br />
<br />
<div class="container">
    <div class="row">
    {% for i, site in sites %}
        <div class="col-md-6" >
            <div class=" panel panel-default">
                <div class="panel-body">
                <img class="img-responsive img margin-auto loading" src="{{ asset('img/loading_site.png') }}"
                     data-src="{{ ('img/sites/' ~ site.subdomain ~ '.jpg')|imagine_filter('thumb_site') }}" >
                <div class="caption">
                    <h2 class="modal-title">
                        <a title="Accéder aux événements de {{ site.nom }}"
                           href="{{ path('tbn_agenda_index', {'subdomain': site.subdomain }) }}">
                            {{ site.nom }}
                        </a>
                    </h2>
                    {{ site.description|raw }}
                    <a title="Accéder aux événements de {{ site.nom }}"
                       class="btn btn-primary btn-flat"
                       href="{{ path('tbn_agenda_index', {'subdomain': site.subdomain }) }}">
                        <i class="fa fa-chevron-right"></i> Accéder
                    </a>
                </div>
                </div>
            </div>
        </div>
        {% if i is odd %}
        <div class="clearfix"></div>
        {% endif %}
    {% endfor %}
    </div>
</div>
{% endblock %}