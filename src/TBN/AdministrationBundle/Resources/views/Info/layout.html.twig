    {% endstylesheets %}       
{% endblock %}

{% block js_administration %}
    {% javascripts 
        '@TBNSocialBundle/Resources/public/js/SocialLogin.js'
        output='prod/js/administration/info/login.js'
    %}
        <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}
