{% extends "base.html.twig" %}

{% block start_container -%}
<div class="container" id="container">
{%- endblock %}

{% block titre -%}
    Créer un nouvel événement
{%- endblock %}

{% block title -%}
    Nouvel événement
{%- endblock %}

{% block breadcrumb_content -%}
    {% set item = menu.addItem("Mon compte", path('fos_user_profile_show')) %}
    {% set item = menu.addItem("Mes événements", path('tbn_agenda_list')) %}
    {% set item = menu.addItem("Nouveau", path('tbn_agenda_new')) %}
{%- endblock %}

{% block body -%}
    <div class="mon_evenement">
        {% block body_form %}
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="row">
                <div class="col-md-6">
                    {% include "EspacePerso/event_part_1.html.twig" %}
                    {% include "EspacePerso/event_part_4.html.twig" %}
                </div>
                <div class="col-md-6">
                    {% include "EspacePerso/event_part_2.html.twig" %}
                    {% include "EspacePerso/event_part_3.html.twig" %}
                </div>
            </div>
            <hr/>
            <div class="row">
                <div class="col-md-4 text-left">
                    {% block button_submit %}
                        {{ form_row(form.ajouter) }}
                    {% endblock %}
                    <a class="btn btn-default btn-raised bg-white" href="{{ path('tbn_agenda_list') }}"
                       title="Retourner à mes soirées">
                        <i class="fa fa-chevron-left"></i>
                        Retour
                    </a>
                </div>
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        {% endblock %}
    </div>
{%- endblock %}

{% block css -%}
    <link rel="stylesheet" href="{{ app_asset('espace-perso/evenements/css/manager.min.css', 'asset') }}" type="text/css">
{%- endblock %}

{% block head_js -%}
    <script src="//maps.googleapis.com/maps/api/js?v=3.exp&key={{ googleMapKey }}&language=fr&libraries=places"></script>
{%- endblock %}

{% block js -%}
    <script type="text/javascript">var ville = "";</script>
    <script src="{{ app_asset('espace-perso/evenements/js/manager.min.js', 'asset') }}" type="text/javascript"></script>
{%- endblock %}
