{% spaceless %}
<!DOCTYPE HTML>
<html prefix="og: http://ogp.me/ns#" lang="fr" xmlns:hx="http://purl.org/NET/hinclude" xmlns:fb="http://ogp.me/ns/fb#">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" >
        <meta http-equiv="Content-Language" content="fr">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!--[if IE]>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <![endif]-->        
        <title>{% spaceless %}{% block full_title %}{% block title %}{% endblock %} - {% block nom_site %}By Night{% endblock %}{% endblock %}{% endspaceless %}</title>
        <meta name="keywords" content="{% spaceless %}{% block meta_keywords %}{% endblock %}by,night,agenda,soiree,sortir,etudiant,famille,musique,theatre,rock,pop,electro,jazz,rap"{% endspaceless %}>
        <meta name="description" content="{% spaceless %}{% block description %}{% block meta_description %}By Night vous fait découvrir tous les événements du moment !{% endblock %}{% endblock %}{% endspaceless %}">
        
        <!-- OpenGraph -->
        <meta property="og:site_name" content="{{ block('nom_site') }}">
        <meta property="og:description" content="{% block og_description %}{{ block('description') }}{% endblock %}">
        <meta property="og:title" content="{% spaceless %}{% block og_titre %}{{ block('title') }}{% endblock %}"{% endspaceless %}>
        <meta property="og:type" content="{% spaceless %}{% block og_type %}website{% endblock %}"{% endspaceless %}>        
        <meta property="og:url" content="{% spaceless %}{% block og_url %}{{ url('tbn_main_index') }}{% endblock %}"{% endspaceless %}>
        <meta property="og:image" content="{% spaceless %}{% block og_image %}{{ asset('img/by-night.png') }}{% endblock %}"{% endspaceless %}>
        <!-- ./OpenGraph -->
        
        <!-- IE10+ -->
        <meta name="application-name" content="{{ block('nom_site') }}">
        <meta name="msapplication-TileColor" content="#000000">
        <meta name="msapplication-tooltip" content="{{ block('nom_site') }} Officiel">
        <meta name="msapplication-square70x70logo" content="{{ asset('tiny.png') }}">
        <meta name="msapplication-square150x150logo" content="{{ asset('square.png') }}">
        <meta name="msapplication-wide310x150logo" content="{{ asset('wide.png') }}">
        <meta name="msapplication-square310x310logo" content="{{ asset('large.png') }}">
        <!-- ./IE10+ -->
        
        <!-- Twitter -->
        {% block twitter %}{% endblock %}
        <!-- ./Twitter -->
        
        <!-- FB -->
        {% block facebook %}{% endblock %}
        <!-- ./FB -->
        
        <!-- Google -->
        {% block google %}{% endblock %}
        <!-- ./Google -->
        
        
        <link rel="shortcut icon" type="image/png"  href="{{ asset('favicon.png') }}" >
        <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}" >
        
        <!-- CSS -->
        <link href='//fonts.googleapis.com/css?family=Roboto:300,400,700' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" type="text/css" media="screen" >
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/4.2.0/css/font-awesome.min.css" type="text/css" media="screen" >
        
        {% stylesheets 
            'css/theme.css'
            'css/fil-ariane.css'
            'css/social-icons.css'            
            'css/commons.css'
            'css/footer.css'
            'css/style.css'
            'css/respond.css'

            filter='cssrewrite,?yui_css'
            output='prod/css/base.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen" >
        {% endstylesheets %}       
        {% block css %}
        {% endblock %}
        <!-- ./CSS -->
        
        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.2/html5shiv.js"></script>
            <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
        {% block head_js %}{% endblock %}
        
    </head>
    <body itemscope itemtype="http://schema.org/WebPage">
        <div id="wrap">            
            <!-- Menu -->
            {% block menu -%}
                {% include "::menu.html.twig" %}
            {%- endblock %}
            <!-- ./Menu -->            
            
            <!-- Main -->
            {% block start_container -%}
                <div class="container bg-white" id="container">
            {%- endblock %}
                <div id="bread">
                    {% block breadcrumb -%}{%- endblock %}
                </div>

                <div class="page-header" id="banner">
                    <h1 class="titrebloc">{% spaceless %}{% block titre %}{% endblock %}{% endspaceless %}</h1>
                </div>
                {% for key, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <div class="alert alert-{{ key == "error" ? "danger" : key }}">
                            <i class="fa fa-{{ key == 'info' ? 'info-circle' : (key == 'error' ? 'warning' : key == 'success' ? 'check' : key) }}"></i> 
                            {{ message|trans|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
                {% block body -%}{%- endblock %}
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- Bannière Footer Responsive -->
                <ins class="adsbygoogle" id="ad-footer"
                     style="display:block"
                     data-ad-client="ca-pub-2072406985754187"
                     data-ad-slot="3892751912"
                     data-ad-format="auto"></ins>
                <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
                </script>                                
            {% block end_container -%}
            </div>                        
            {%- endblock %}
            <!-- ./Main -->
        </div>
            
        <!-- Modals -->
        <div class="modal fade" id="dialog_details" tabindex="-1" role="dialog" aria-labelledby="dialog_titre" aria-hidden="true">
            {% include "::modals.html.twig" %}                        
        </div>
        <!-- ./Modals -->
        
        <footer>
            <div id="footer">
                <div class="container sous-header">
                        {% block footer -%}{%- endblock %}                        
                        <p class="pull-left">
                            <a href="{{ path('tbn_main_index') }}"><strong>By Night</strong></a>                            
                            | © {{ "now"|date('Y') }} - Tous droits réservés
                        </p>
                        <p class="pull-right">
                            Fait avec <span class="love">♥</span> à Toulouse - 
                           <a href="http://sainthillier.fr">GS</a>
                        </p>
                </div>                   
            </div>
        </footer>  
        <a id="toTop" href="#">
            <span id="toTopHover"></span>
            <img width="60" height="60" alt="En Haut" src="{{ asset('img/to-top@2x.png') }}" >
        </a>
           
        <!-- JS -->        
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-45716709-2', 'by-night.fr');
            ga('require', 'displayfeatures');
            ga('send', 'pageview');
            
            {% spaceless %}
                var js_scripts = {};            
                js_scripts.base = ["//cdnjs.cloudflare.com/ajax/libs/jquery/1.11.1/jquery.min.js"];

                {% javascripts 
                    'js/modernizr.js'

                    filter='?yui_js'
                    output='prod/js/modernizr.js'
                %}
                    js_scripts.base.push("{{ asset_url }}");
                {% endjavascripts %}

                js_scripts.lib = ["//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.0/js/bootstrap.min.js",
                "//cdnjs.cloudflare.com/ajax/libs/jquery-ajaxtransport-xdomainrequest/1.0.3/jquery.xdomainrequest.min.js"];
                js_scripts.plugin = [];

                {% javascripts 
                    'js/overrides.js'
                    'js/jquery.scrollTo.min.js'                    

                    filter='?yui_js'
                    output='prod/js/overrides_bootstrap.js'
                %}
                    js_scripts.plugin.push("{{ asset_url }}");
                {% endjavascripts %}

                js_scripts.final = [];
                {% javascripts 
                    'js/scripts.js'

                    filter='?yui_js'
                    output='prod/js/main_scripts.js'
                %}            
                    js_scripts.final.push("{{ asset_url }}");
                {% endjavascripts %}
            {% endspaceless %}
          
            {% block js -%}{%- endblock %}

        </script>
        
        {% javascripts 
            'js/load.js'

            filter='?yui_js'
            output='prod/js/load.js'
        %}
            <script src="{{ asset_url }}" async></script>
        {% endjavascripts %}
        
    </body>
</html>
{% endspaceless %}