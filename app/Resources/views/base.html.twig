<!DOCTYPE HTML>
<html prefix="og: http://ogp.me/ns#" lang="fr" xmlns:hx="http://purl.org/NET/hinclude" xmlns:fb="http://ogp.me/ns/fb#">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" >
        <meta http-equiv="Content-Language" content="fr">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!--[if IE]>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <![endif]-->        
        <title>{% block full_title %}{% block title %}{% endblock %} - {% block nom_site %}By Night{% endblock %}{% endblock %}</title>
        <meta name="keywords" content="{% block meta_keywords %}{% endblock %},ce,soir,soiree,sortie,concert,spectable,musique,discoteque,boite,de,nuit">
        <meta name="description" content="{% block description %}{% block meta_description %}By Night vous fait découvrir tous les événements du moment !{% endblock %}{% endblock %}">
        
        <!-- OpenGraph -->
        <meta property="og:site_name" content="{{ block('nom_site') }}">
        <meta property="og:description" content="{% block og_description %}{{ block('description') }}{% endblock %}">
        <meta property="og:title" content="{% block og_titre %}{{ block('title') }}{% endblock %}">
        <meta property="og:type" content="{% block og_type %}website{% endblock %}">        
        <meta property="og:url" content="{% block og_url %}{{ url('tbn_main_index') }}{% endblock %}">
        <meta property="og:image" content="{% block og_image %}{{ asset('img/by-night.png') }}{% endblock %}">
        <!-- ./OpenGraph -->
        
        <!-- IE10+ -->
        <meta name="application-name" content="{{ block('nom_site') }}">
        <meta name="msapplication-TileColor" content="#000000">
        <meta name="msapplication-tooltip" content="Agenda des événements">
        <meta name="msapplication-square70x70logo" content="{{ asset('tiny.png') }}">
        <meta name="msapplication-square150x150logo" content="{{ asset('square.png') }}">
        <meta name="msapplication-wide310x150logo" content="{{ asset('wide.png') }}">
        <meta name="msapplication-square310x310logo" content="{{ asset('large.png') }}">
        <!-- ./IE10+ -->
        
        <!-- Twitter -->
        {% block twitter %}{% endblock %}
        <!-- ./Twitter -->
        
        <!-- FB -->
        {% block facebook %}{% endblock %}
        <!-- ./FB -->
        
        <!-- Google -->
        {% block google %}{% endblock %}
        <!-- ./Google -->
        
        {% block metas %}{% endblock %}
        
        <link rel="canonical" href="{{ url(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}" />
        <link rel="shortcut icon" type="image/png"  href="{{ asset('favicon.png') }}" >
        <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}" >
        
        <!-- CSS -->
        <link href='//fonts.googleapis.com/css?family=Roboto:100,300,400|Roboto+Condensed:100,300,400' rel='stylesheet' type='text/css'>
        
        {% stylesheets 
            'bower/jquery.cookiebar/jquery.cookiebar.css'
            'bower/bootstrap/dist/css/bootstrap.min.css'
            'bower/fontawesome/css/font-awesome.min.css'
            'bower/bootstrap-material-design/dist/css/ripples.css'
            'css/themes/blue.css'
            'css/social-icons.css'            
            'css/commons.css'
            'css/footer.css'
            'css/style.css'
            'css/respond.css'
            output='prod/css/style.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" >
        {% endstylesheets %}
        {% stylesheets 
            'css/print.css'
            output='prod/css/print.css'
        %}
            <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="print">
        {% endstylesheets %}   
        {% block css %}
        {% endblock %}
        <!-- ./CSS -->
        
        <!--[if lt IE 9]>
            <script src="//oss.maxcdn.com/libs/html5shiv/3.7.2/html5shiv.js"></script>
            <script src="//oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
        {% block head_js %}{% endblock %}
        
    </head>
    <body itemscope itemtype="http://schema.org/WebPage">
        <div id="wrap">
            <header>
                <!-- Menu -->
                {% block menu -%}
                    {% include "::menu.html.twig" %}
                {%- endblock %}
                <!-- ./Menu -->            

                {% block breadcrumb -%}{%- endblock %}
            </header>
            {% block container_titre %}
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1">
                        <h1 class="titrebloc">{% block titre %}{% endblock %}</h1>
                        <div class="divider">
                            <span class="text-primary divider-icon"></span>
                        </div>
                    </div>
                </div>                            
            </div>
            {% endblock %}
            
            <!-- Main -->
            {% block helper_top %}{% endblock %}
            {% block start_container -%}
            <div class="container panel panel-primary" id="container">
            {%- endblock %}
                {% for key, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <div class="alert alert-{{ key == "error" ? "danger" : key }}">
                            <i class="fa fa-{{ key == 'info' ? 'info-circle' : (key == 'error' ? 'warning' : key == 'success' ? 'check' : key) }}"></i> 
                            {{ message|trans|raw }}
                        </div>
                    {% endfor %}
                {% endfor %}
                {% block helper %}{% endblock %}
                {% block body -%}{%- endblock %}
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- Bannière Footer Responsive -->
                <ins class="adsbygoogle" id="ad-footer"
                     style="display:block"
                     data-ad-client="ca-pub-2072406985754187"
                     data-ad-slot="3892751912"
                     data-ad-format="auto"></ins>
                <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
                </script>                                
            {% block end_container -%}
            </div>                        
            {%- endblock %}
            <!-- ./Main -->
        </div>
            
        <!-- Modals -->
        <div class="modal fade" id="dialog_details" tabindex="-1" role="dialog" aria-labelledby="dialog_titre" aria-hidden="true">
            {% include "::modals.html.twig" %}                        
        </div>
        <!-- ./Modals -->
        
        <footer>
            <div id="footer">
                <div class="container sous-header">
                        {% block footer -%}{%- endblock %}                        
                        <p class="pull-left">
                            <a href="{{ path('tbn_main_index') }}"><strong>By Night</strong></a>                            
                            | © {{ "now"|date('Y') }} - Tous droits réservés
                        </p>
                        <p class="pull-right">
                            Fait avec <span class="number text-danger">♥</span> à Toulouse - 
                           <a href="http://sainthillier.fr">GS</a>
                        </p>
                </div>                   
            </div>
        </footer>
        <a href="#" id="toTop" class="btn btn-primary btn-fab btn-raised">
            <span id="toTopHover">
                <i class="fa fa-chevron-up"></i>
            </span>
        </a>
        
        <script type="text/javascript">
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', 'UA-45716709-2', 'by-night.fr');
            ga('require', 'displayfeatures');
            ga('send', 'pageview');                
        </script>
        <!-- JS -->
        {% javascripts 
            'bower/jquery/dist/jquery.min.js'
            'bower/bootstrap/dist/js/bootstrap.min.js'            
            'bower/bootstrap-material-design/dist/js/ripples.js'
            'bower/bootstrap-material-design/dist/js/material.js'
            'bower/jquery.cookiebar/jquery.cookiebar.js'
            'bower/jquery.scrollTo/jquery.scrollTo.min.js'
            'js/overrides.js'
            'js/socials.js'
            'js/App.js'

            output='prod/js/app.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
        <script type="text/javascript"> 
            $(document).ready(function(){
                $.cookieBar({
                    message: 'En poursuivant votre navigation, vous acceptez l\'utilisation de cookies pour vous proposer des services et offres adaptés à vos centres d\'intérêts et mesurer la fréquentation de nos services.',
                    acceptText: 'J\'ai compris',
                    bottom: true,
                    fixed: true,
                    policyButton: true,
                    policyText: 'En savoir plus',
                    policyURL: '{{ path('tbn_main_cookie') }}'
                });
            });
        </script>
        {% block js -%}{%- endblock %}        
        <!-- ./JS -->
    </body>
</html>

